section.main-cover
    .main-cover_bg-video
        .bg-video_wrap
            .bg-video_slider
                .bg-video_slide
                    video.video-bg(muted playsinline preload="auto")
                        source(src="video/video-1.webm" type="video/webm")
                        source(src="video/video-1.mp4" type="video/mp4")
                .bg-video_slide
                    video.video-bg(muted playsinline preload="auto")
                        source(src="video/video-2.webm" type="video/webm")
                        source(src="video/video-2.mp4" type="video/mp4")
                .bg-video_slide
                    video.video-bg(muted playsinline  preload="auto")
                        source(src="video/video-3.webm" type="video/webm")
                        source(src="video/video-3.mp4" type="video/mp4")
                .bg-video_slide
                    video.video-bg(muted playsinline  preload="auto")
                        source(src="video/video-4.webm" type="video/webm")
                        source(src="video/video-4.mp4" type="video/mp4")
    .b-container-fluid
        .main-row.row.align-items-center
            .col-lg-6.offset-lg-1.col-12.offset-0
                .main-cover_title
                    p.sub-title.fade-up Welcome to Carve
                    h1.h1-title.fade-up Adventure is waiting
    form.mc_form.fade-up
        .mc_title
            h6 Get Started
        .mc_section
            h6 Pickup 1
            .mc_select.mc_select_date
                input.input_picker.pickup_data(type='date' placeholder='Date'
                data-target=".pickup_data" required)
            .mc_select.mc_select_time
                input.input_picker.pickup_time(type='time' min="09:00" placeholder='Time'
                data-target=".pickup_time" required)
        .mc_section
            h6 Dropoff
            .mc_select.mc_select_date
                input.input_picker.dropoff_data(type='date' placeholder='Date'
                data-target=".dropoff_data"  required)
            .mc_select.mc_select_time
                input.input_picker.dropoff_time(type='time' min="09:00" placeholder='Time'
                data-target=".dropoff_time"  required)
        .mc_btn
            button Search
